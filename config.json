{
  // Master on/off switch for the mod.
  // true  = mod runs and posts/edits the Discord message
  // false = mod does nothing (but still loads)
  "Enabled": true,

  "Discord": {
    // REQUIRED.
    // Paste your Discord webhook URL here.
    "WebhookUrl": "",

    // Optional: overrides the webhook's default "name" shown on messages. Need to delete the previous message for the name to actually change.
    "Username": "Fika Status",

    // Optional: webhook avatar image URL. Leave "" to use the webhook's default.
    // Must be a direct image URL (png/jpg/webp).
    "AvatarUrl": "",

    // Optional: Discord text-to-speech. Usually keep false.
    "Tts": false,

    // Optional: Forces the mod to edit an existing webhook message instead of creating a new one.
    // 0 = let the mod create a message and remember its id in StateFile
    // >0 = always edit THIS message id (advanced; do this only if you know what you're doing)
    "StatusMessageId": 0,

    // Where the mod stores the last created message id (when StatusMessageId == 0).
    // This file is created INSIDE the mod folder.
    "StateFile": "message_Id.json"
  },

  "Fika": {
    "BaseUrl": "https://127.0.0.1:6969",

    // REQUIRED.
    // Your Fika API key. If this is blank/wrong you will get 401 Unauthorized.
    "ApiKey": "",

    "IgnoreSslErrors": true,

    // How long we wait for the Fika endpoints before giving up.
    // This value is "startup-only"
    "TimeoutSeconds": 10
  },

  "Update": {
    // How often (in seconds) the mod refreshes data and updates the Discord embed.
    // This value IS safe to change live; it takes effect next loop.
    "IntervalSeconds": 30
  },

  "LogMonitor": {
    // Enables weekly boss parsing from SPT server logs.
    // true  = read log file and try to find "Weekly Boss" lines
    // false = skip log reading entirely
    "Enabled": false,

    // Folder where SPT logs live. Must be the DIRECTORY containing spt*.log files.
    // JSON treats backslash \ as an escape character.
    // Use double backslashes like: "X:\\Your\\Tarkov\\Folder\\SPT\\user\\logs\\spt"
    "LogFolderPath": ""
  },

